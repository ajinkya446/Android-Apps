<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue"
    tools:context=".AddData">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/border"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:backgroundTint="@android:color/background_light"
                android:text="Apply for unique card"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="normal|bold" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/namePeople"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/simple_border"
                android:hint="Name"
                android:padding="5dp"
                android:radius="6dp"
                android:textSize="19sp"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/AddressPeople"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/simple_border"
                android:hint="Address"
                android:lines="1"
                android:padding="5dp"
                android:radius="6dp"
                android:textSize="19sp"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/EmailPeople"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/simple_border"
                android:hint="Email"
                android:lines="1"
                android:padding="5dp"
                android:radius="6dp"
                android:textSize="19sp"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/mobilePeople"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/simple_border"
                android:hint="mobile"
                android:lines="1"
                android:padding="5dp"
                android:radius="6dp"
                android:textSize="19sp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/border"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/genderPeople"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="19sp"
                    android:textStyle="normal" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/birthDate"
                    android:padding="5dp"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/simple_border"
                    android:hint="Date of Birth"
                    android:textSize="19sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/parentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/simple_border"
                android:hint="Parent Name"
                android:lines="1"
                android:padding="5dp"
                android:radius="6dp"
                android:textSize="19sp"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/parentMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/simple_border"
                android:hint="Parent Mobile"
                android:lines="1"
                android:padding="5dp"
                android:radius="6dp"
                android:textSize="19sp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/border"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#C5EEFD"
                    app:cardElevation="4dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imagePeople"
                        android:layout_width="90dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:src="@drawable/add"
                        android:layout_margin="5dp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="110dp"
                        android:layout_marginBottom="5dp"
                        android:text="Capture Image"
                        android:textAlignment="center"
                        android:textSize="18dp"
                        android:textStyle="bold" />


                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/border"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_margin="15dp"
                    android:padding="10dp"
                    android:text="Submit Data"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="normal|italic" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/cancelData"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginBottom="15dp"
                    android:padding="10dp"
                    android:text="Cancel"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="normal|italic" />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>